
    <%- include('partials/_header');  %>
 
 
      <div class="row">
          <div class="col-md-8">
<table class="table table-striped table-inverse table-responsive">
  <thead class="thead-inverse">
    <tr>
      <td>Actions</td>
      <td>n</td>
      <th>Name</th>
      <th>Caption</th>
      <th>Type</th>
      <th>Value</th>
      <th>Group</th>
    </tr>
    </thead>
    <tbody>
  
      <% if (data) { %>
         
        <%  for (var i = 0; i < data.length; i++){%>
          <tr>
            <td scope="row"> 
              
              <a href="/delete/<%= data[i].id %>" class="btn btn-danger btn-small"> delete </a>
              <a href="/update/<%= data[i].id %>" class="btn btn-info btn-small"> Update </a></td>
            <td> <%= data[i].id %></td>

            <td> <%= data[i].name %></td>
            <td> <%= data[i].caption %></td>
            <td> <%= data[i].type %></td>
            <td> <%= data[i].value %></td>
            <td> <%= data[i].group %></td>
          </tr>
        
          <%  }%>

     <% } %>
      
      
    </tbody>
</table>
          </div>
          <div class="col-md-4">
             <div class="card text-left">
               <img class="card-img-top"  >
               <div class="card-body">
                <form action="/add" method="POST">  
                 <h4 class="card-title">Field from</h4>
                 <p class="card-text">
                    <div class="form-group">
                      <label for="name">Name Field</label>
                      <input type="text" name="name"  required id="name" class="form-control" placeholder="" aria-describedby="helpId">
                      
                    </div> 
                       <div class="form-group">
                         <label for="caption">Caption</label>
                         <input type="text" name="caption" id="caption" class="form-control" placeholder="" aria-describedby="helpId">
                         
                       </div> 
                       <div class="form-group">
                         <label for="Type">Type</label> 
                         <select name="Type" id="Type"  class="form-control" >
                          <option value="text">text</option> 
                          <option  value="select">select</option> 
                        </select>
                         <small id="helpId" class="text-muted">Type text</small>
                       </div>
                       <div class="form-group">
                         <label for="value">Value</label>
                         <input type="text" name="value" id="value" class="form-control" placeholder="" aria-describedby="helpId">
                         
                       </div>
                       <div class="form-group">
                         <label for="Group">Group</label>
                         <input type="text" name="Group" id="Group" class="form-control" placeholder="" aria-describedby="helpId">
                         
                       </div>
                       <button type="submit" class="btn btn-primary">
                           Save field
                          
                       </button>
                 </p>
                </form>
               </div>
             </div>
        </div>
       
      </div>

  
    <%- include('partials/_footer');  %>
